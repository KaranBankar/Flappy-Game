<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="12dp"
    app:cardBackgroundColor="#CC1A237E">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:background="@drawable/game_over_background">

        <ImageView
            android:id="@+id/game_over_image"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:layout_marginTop="16dp"
            android:contentDescription="Game Over Image"
            android:scaleType="centerCrop"
            android:src="@drawable/img1"
            android:transitionName="game_over_image_transition" />

        <TextView
            android:id="@+id/score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your score is: 0"
            android:textSize="24sp"
            android:textColor="#00FF00"
            android:textStyle="bold"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">



            <Button
                android:id="@+id/exitButton"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:background="@drawable/neon_button_background"
                android:text="Exit"
                android:textColor="@android:color/black"
                android:layout_marginEnd="26dp"
                android:textSize="16sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/restartButton"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:background="@drawable/neon_button_background"
                android:text="Restart"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>